<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TransactionsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/gif"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/summary_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gif"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/summary_frienddebt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/summary_total"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/summary_mydebt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/summary_frienddebt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/summary_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gif"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</FrameLayout>